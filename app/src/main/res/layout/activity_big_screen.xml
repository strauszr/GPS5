<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BigScreenActivity"
    android:id="@+id/table"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light">

    <TableLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00"
                android:id="@+id/debug"/>


        </TableRow>
    </TableLayout>

    <TableLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="GPS: "
                android:paddingRight="2dp"
                android:id="@+id/tv_gpsstatus"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="---"
                android:id="@+id/tv_gpsstatus_in"
                android:layout_column="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="42sp"
                android:id="@+id/btn_start"
                android:text="Start"
                android:layout_column="2"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/tv_sats"

                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="#Sat x/x"
                android:id="@+id/tv_sats_in"
                android:layout_column="3"
                android:gravity="right"
                android:layout_weight="0" />

        </TableRow>


        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    </TableLayout>

    <TableLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/rgsimageview1"
                android:layout_column="0"
                android:paddingLeft="4dp"
                android:src="@drawable/speed"                    
                android:contentDescription="Speed"
                android:paddingRight="4dp"
                android:layout_weight="0"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00.00"
                android:id="@+id/rgstextview1"
                android:textSize="@dimen/abc_action_bar_stacked_max_height"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="km/h"
                android:id="@+id/rgsunit1"
                android:padding="0dp"
                android:layout_column="2"
                android:layout_gravity="center_vertical" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/rgsimageview2"
                android:layout_column="0"
                android:src="@drawable/clock"
                android:contentDescription="Duration"
                android:layout_gravity="center_vertical"
                android:paddingRight="4dp"
                android:layout_weight="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00:00:00"
                android:id="@+id/rgstextview2"
                android:textSize="@dimen/abc_action_bar_stacked_max_height"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/rgsunit2"
                android:padding="0dp"
                android:layout_column="2"
                android:layout_gravity="center_vertical" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/rgsimageview3"
                android:layout_column="0"
                android:src="@drawable/distance"
                android:contentDescription="Distance"
                android:paddingRight="4dp"
                android:layout_weight="0" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0.00"
                android:id="@+id/rgstextview3"
                android:textSize="@dimen/abc_action_bar_stacked_max_height"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="km"
                android:id="@+id/rgsunit3"
                android:padding="0dp"
                android:layout_column="2"
                android:layout_gravity="center_vertical" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/rgsimageview4"
                android:layout_column="0"
                android:src="@drawable/heart"
                android:contentDescription="Heartrate"
                android:paddingRight="4dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="000"
                android:id="@+id/rgstextview4"
                android:textSize="@dimen/abc_action_bar_stacked_max_height"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="bpm"
                android:id="@+id/rgsunit4"
                android:layout_column="2"
                android:layout_gravity="center_vertical" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/rgsimageview5"
                android:layout_column="0"
                android:src="@drawable/calories"
                android:contentDescription="Calories"
                android:paddingRight="4dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00"
                android:id="@+id/rgstextview5"
                android:textSize="@dimen/abc_action_bar_stacked_max_height"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="kCal"
                android:id="@+id/rgsunit5"
                android:layout_column="2"
                android:layout_gravity="center_vertical" />



        </TableRow>


    </TableLayout>

    <TableLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table3">



        <View
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="#c0c0c0"/>




        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/tv_000"

                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="AppState"
                android:id="@+id/tv_app_state"

                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-"
                android:id="@+id/tv_app_state_in"

                android:layout_column="3" />
        </TableRow>
    </TableLayout>

</LinearLayout>